<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_cat_list">

    <fragment
        android:id="@+id/navigation_cat_list"
        android:name="com.lisandrolopez.krikeychallenge.ui.catlist.CatListFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_cat_list" >
        <action
            android:id="@+id/action_navigation_home_to_catDetailFragment"
            app:destination="@id/catDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/catDetailFragment"
        android:name="com.lisandrolopez.krikeychallenge.ui.detail.CatDetailFragment"
        android:label="@string/detail">
        <argument
            android:name="catimg"
            app:argType="string" />
    </fragment>
</navigation>